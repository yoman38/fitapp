BoxLayout:
    orientation: "vertical"

    MDTabs:
        id: tabs
        tab_bar_height: '48dp'
        color: 0, 0, 0, 1  # RGBA for black
        tab_indicator_anim: False
        tab_indicator_color: 1, 0, 0, 1
        background_color: 0.1, 0.1, 0.1, 1

<ExerciseListTab>:
    ScrollView:
        MDBoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            id: exercise_list

